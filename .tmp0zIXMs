# Always build against latest stable
ARG RUST_VERSION=1.83-slim
FROM rust:${RUST_VERSION} as builder
COPY --from=bosunai/swiftide-docker-service:0.4.2 /usr/bin/swiftide-docker-service /usr/local/bin/swiftide-docker-service
COPY --from=bosunai/swiftide-docker-service:0.4.2 /usr/bin/rg /usr/local/bin/rg
COPY --from=bosunai/swiftide-docker-service:0.4.2 /usr/bin/fd /usr/local/bin/fd

RUN rustup component add clippy rustfmt
RUN rustup toolchain install nightly

# Install tool dependencies for app and git/ssh for the workspace
RUN apt-get update && apt-get install -y --no-install-recommends \
  ripgrep fd-find git ssh curl  \
  libstdc++6 \
  build-essential \
  protobuf-compiler \
  libprotobuf-dev \
  pkg-config libssl-dev iputils-ping \
  make \

  # Needed for copypasta (internal for kwaak)
  libxcb1-dev libxcb-render0-dev libxcb-shape0-dev libxcb-xfixes0-dev \
  && rm -rf /var/lib/apt/lists/* \
  && cp /usr/bin/fdfind /usr/bin/fd

RUN cargo install cargo-nextest
RUN cargo +nightly install cargo-llvm-cov cargo-nextest

COPY . /app

WORKDIR /app